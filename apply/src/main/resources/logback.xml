<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- 彩色日志渲染类 -->
    <conversionRule conversionWord="clr" converterClass="org.springframework.boot.logging.logback.ColorConverter" />
    <conversionRule conversionWord="wex" converterClass="org.springframework.boot.logging.logback.WhitespaceThrowableProxyConverter" />
    <conversionRule conversionWord="wEx" converterClass="org.springframework.boot.logging.logback.ExtendedWhitespaceThrowableProxyConverter" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-15.15thread] %clr(%-5level) %-40.40logger{36}:%clr(%-4L){blue} - %msg%n${LOG_EXCEPTION_CONVERSION_WORD:-%wEx}</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/server.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/server.log.%d{yyyy-MM-dd}</fileNamePattern>
        </rollingPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36}:%L - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- 异步输出 -->
    <appender name ="ASYNC-FILE" class= "ch.qos.logback.classic.AsyncAppender">
        <!-- 不丢失日志.默认的,如果队列的80%已满,则会丢弃TRACT、DEBUG、INFO级别的日志 -->
        <discardingThreshold >0</discardingThreshold>
        <!-- 更改默认的队列的深度,该值会影响性能.默认值为256 -->
        <queueSize>1024</queueSize>
        <!-- 记录行号 性能有影响 -->
        <includeCallerData>true</includeCallerData>
        <!--param name="LocationInfo" value="true"/-->
        <!-- 添加附加的appender,最多只能添加一个 -->
        <appender-ref ref ="FILE"/>
    </appender>

    <logger name="org.apache.coyote.http11.Http11InputBuffer" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC-FILE" />
        <appender-ref ref ="STDOUT"/>
    </logger>
    <logger name="org.springframework.jdbc" level="DEBUG"/>
    <logger name="org.springframework.security" level="INFO"/>
    <logger name="com.cbibank.thinking.thinkingcube.common.ThinkingCubeMessageSource" level="ERROR"/>
    <root level="INFO">
        <appender-ref ref ="ASYNC-FILE"/>
        <appender-ref ref ="STDOUT"/>
    </root>
</configuration>
